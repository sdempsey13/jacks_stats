<div class="container">
  <div class="row">
    <div class="col text-center">
      <p id="notice"><%= notice %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-9">
      <h1>Teams</h1>
    </div>
    <div class="col-sm-3">
      <h3>Filter</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 team-holder">
      Jackson's Requested Players
    </div>
  </div>

  <% @teams.each do |team| %>
    <div class="row">
      <div class="col-sm-12 team-holder">
        <%= team.name %>
      </div>
    </div>
    <% team.players.each do |player| %>
      <div class="row">
        <div class="col-md-2">
          <%= player.name %>
        </div>
        <% player.skater_stats.each do |stat| %>
          <% if stat.season_year %>
            <div class="col-md-1">
              <%= stat.season_year %>
            </div>
          <% end %>
        <% end %>
      </div>
      <% end %>
    <% end %>

  <div class="row" style="margin-bottom:5em;">
    <div class="col-sm-3">
      <%= link_to 'Populate The Website!', populate_all_website_data_path, class: "btn btn-primary", method: :post %>
    </div>

    <div class="col-sm-3">
      <%= link_to 'Depopulate The Website!', delete_all_website_data_path, class: "btn btn-danger", method: :delete %>
    </div>
  </div>
</div>
